<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mrrobot.suitbridge"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/suit_bridge_hdpi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/suit_bridge_mdpi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".GPACalculator"
                  android:theme="@style/StudentClass">
        </activity>
        <activity android:name=".ChatTeacherToStudentMain"
                  android:theme="@style/StudentClass">
        </activity>
        <activity android:name=".TeacherCreatePost"
                  android:theme="@style/StudentClass">
        </activity>
        <activity
            android:name=".TeacherClass"
            android:theme="@style/StudentClass">
        </activity>
        <activity
            android:name=".ChatStudentToStudentMain"
            android:theme="@style/StudentClass">
        </activity>
        <activity android:name=".LostorFoundMain"
                  android:theme="@style/StudentClass">
        </activity>
        <activity
            android:name=".CreatePost"
            android:theme="@style/StudentClass">
        </activity>
        <activity
            android:name=".StudentClass_Activity"
            android:theme="@style/StudentClass"
            tools:ignore="ExtraText">
        </activity>
        <activity android:name=".TeacherJoinClass">
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/SuitBridgeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity android:name=".StudentRegisteration">
        </activity>
        <activity android:name=".TeacherRegistration">
        </activity>
        <activity android:name=".StudentOptions">
        </activity>
        <activity
            android:name=".TeacherOptions"
            android:theme="@style/StudentClass">
        </activity>
    </application>

</manifest>