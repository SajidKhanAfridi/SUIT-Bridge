<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundfragment"
    android:id="@+id/linearLayout4">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeline_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="773dp"
        tools:layout_conversion_absoluteWidth="411dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_createnewpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_create_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/timeline_recycler_view"/>
</android.support.constraint.ConstraintLayout>