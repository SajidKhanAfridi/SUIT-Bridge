<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Student Registration"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <android.support.design.widget.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/register_username"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Name"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            style="@style/parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/signup_text_margin_top"
            android:text="Select last 3 Nums of your Registration no:">
        </TextView>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/rollno_regno_spinner"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:text="Select your Section:">
            </TextView>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/section_spinner"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:text="Select your semester:">
            </TextView>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/semesterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/signup_text_margin_top"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:text="Select your Program:">
            </TextView>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/programSpinner"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:text="Select your Department:">
            </TextView>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/departmentSpinner"
                android:layout_marginTop="@dimen/signup_text_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button
            android:id="@+id/button"
            style="@style/parent"
            android:layout_gravity="center"
            android:text="Confirm"
            android:onClick="confirmButton"/>


    </LinearLayout>
</android.support.v7.widget.CardView>
