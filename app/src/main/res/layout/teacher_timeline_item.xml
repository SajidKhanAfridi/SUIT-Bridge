<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Backgroundfragment"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:id="@+id/teacherTimeline_card_relativelayout_id"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/teacher_timline_card_bg"
        android:paddingBottom="16dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/teacherTimeline_tv_title_lostorfound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/teacherTimeline_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/teacherTimeline_tv_title_lostorfound"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/teacherTimeline_tv_title_lostorfound"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="5dp"
            android:text="The Quick Brown fox jumps right over the lazy dog the quick brown fox jumps right over the lazy dog the quick brown fox jumps right over the lazy dog the quick brown fox jumps right over the lazy dog the quick brown fox jumps right over the lazy dog"
            android:textColor="@color/Matte_Black"/>

        <TextView
            android:id="@+id/teacherTimeline_tv_date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginStart="179dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/teacherTimeline_tv_title_lostorfound"
            android:text="Date"
            android:textColor="@color/Matte_Black"/>

        <TextView
            android:id="@+id/teacherTimeline_tv_regno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="43dp"
            android:text="Registration No"
            android:textColor="@color/Matte_Black"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/teacherTimeline_img_user"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/card_relativelayout_id"
        app:layout_constraintStart_toStartOf="@+id/card_relativelayout_id"
        app:layout_constraintTop_toTopOf="@+id/card_relativelayout_id"
        app:srcCompat="@mipmap/ic_launcher"/>
</android.support.constraint.ConstraintLayout>